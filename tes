    private void btnKomaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        angka += ".";
        Tampil.setText(angka);
    }                                       

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Tampil.setText("");
        angka = "";
        angka1 = 0;
        angka2 = 0;
    }                                        

    private void btnTambahActionPerformed(java.awt.event.ActionEvent evt) {                                          
        angka1 = Double.parseDouble(angka);
        Tampil.setText("+");
        angka = "";
        pilih = 1;
    }                                         

    private void btnKurangActionPerformed(java.awt.event.ActionEvent evt) {                                          
        angka1 = Double.parseDouble(angka);
        Tampil.setText("-");
        angka = "";
        pilih = 2;
    }                                         

    private void btnKaliActionPerformed(java.awt.event.ActionEvent evt) {                                        
        angka1 = Double.parseDouble(angka);
        Tampil.setText("x");
        angka = "";
        pilih = 3;
    }                                       

    private void btnBagiaActionPerformed(java.awt.event.ActionEvent evt) {                                         
        angka1 = Double.parseDouble(angka);
        Tampil.setText("/");
        angka = "";
        pilih = 4;
    }                                        

    private void btnSamaDenganActionPerformed(java.awt.event.ActionEvent evt) {                                              
        switch(pilih){
            case 1:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1 + angka2;
                angka = Double.toString(jumlah);
                Tampil.setText(angka);
                break;
            case 2:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1 - angka2;
                angka = Double.toString(jumlah);
                Tampil.setText(angka);
                break;
            case 3:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1 * angka2;
                angka = Double.toString(jumlah);
                Tampil.setText(angka);
                break;
            case 4:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1 / angka2;
                angka = Double.toString(jumlah);
                Tampil.setText(angka);
                break;
                            
        }
    }                                             

